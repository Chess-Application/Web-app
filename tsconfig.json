{
	"compilerOptions": {
		"target": "ES5",
		"module": "ESNext",
		"strict": true,
		"jsx": "react-jsx",
		"baseUrl": "./frontend/src",
		"paths": {
			"@utils": ["utils/"],
			"@pages": ["pages/"],
			"@styles": ["styles/"],
			"@hooks": ["hooks/"]
		},

		"noImplicitReturns": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"alwaysStrict": true,
	},

	"include": ["frontend/src/**/*"],
	"exclude": ["node_modules"]
}